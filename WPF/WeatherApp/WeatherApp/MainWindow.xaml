<Window x:Class="WeatherApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:WeatherApp.ViewModels"
        Title="天気予報" 
        Height="800" 
        Width="1200"
        MinHeight="600"
        MinWidth="900"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResizeWithGrip">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <!-- グラデーション背景 -->
        <LinearGradientBrush x:Key="SkyGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#1e3c72" Offset="0"/>
            <GradientStop Color="#2a5298" Offset="0.5"/>
            <GradientStop Color="#7e8ba3" Offset="1"/>
        </LinearGradientBrush>

        <!-- カードスタイル -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#40FFFFFF"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="20" 
                                    ShadowDepth="0" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ボタンスタイル -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#40FFFFFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#60FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- コンボボックススタイル -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#40FFFFFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton"
                                        Background="{TemplateBinding Background}"
                                        BorderThickness="0"
                                        Focusable="False"
                                        IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                        ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <ContentPresenter Grid.Column="0"
                                                                Content="{TemplateBinding Content}"
                                                                Margin="12,8"/>
                                                <TextBlock Grid.Column="1" 
                                                         Text="▼" 
                                                         Foreground="White"
                                                         Margin="0,0,12,0"
                                                         VerticalAlignment="Center"
                                                         FontSize="10"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter x:Name="ContentSite"
                                            IsHitTestVisible="False"
                                            Content="{TemplateBinding SelectionBoxItem}"
                                            ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                            Margin="12,8,30,8"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"/>
                            <Popup x:Name="Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Grid MaxHeight="300"
                                      MinWidth="{TemplateBinding ActualWidth}">
                                    <Border Background="#E0FFFFFF"
                                            CornerRadius="8"
                                            BorderThickness="0">
                                        <ScrollViewer Margin="4" SnapsToDevicePixels="True">
                                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- コンボボックスアイテムスタイル -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C0E0E0E0"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#A0D0D0D0"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource SkyGradient}" CornerRadius="20">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- ヘッダー -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="⛅" FontSize="32" Margin="0,0,10,0"/>
                    <TextBlock Text="天気予報" 
                             FontSize="28" 
                             FontWeight="Bold" 
                             Foreground="White"
                             VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="−" 
                          Style="{StaticResource ModernButton}"
                          Width="40" Height="40"
                          FontSize="20"
                          Click="MinimizeButton_Click"
                          Margin="5,0"
                          ToolTip="最小化"/>
                    <Button Content="□" 
                          Style="{StaticResource ModernButton}"
                          Width="40" Height="40"
                          FontSize="18"
                          Click="MaximizeButton_Click"
                          Margin="5,0"
                          ToolTip="最大化/元に戻す"/>
                    <Button Content="✕" 
                          Style="{StaticResource ModernButton}"
                          Width="40" Height="40"
                          FontSize="18"
                          Click="CloseButton_Click"
                          Margin="5,0"
                          ToolTip="閉じる"/>
                </StackPanel>
            </Grid>

            <!-- 検索バー -->
            <Border Grid.Row="1" 
                    Style="{StaticResource CardStyle}" 
                    Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <ComboBox x:Name="PrefectureComboBox"
                            Grid.Column="0"
                            Style="{StaticResource ModernComboBox}"
                            SelectedValue="{Binding SearchCity, Mode=TwoWay}"
                            SelectedValuePath="Content">
                        <ComboBoxItem Content="北海道" IsSelected="False"/>
                        <ComboBoxItem Content="青森"/>
                        <ComboBoxItem Content="岩手"/>
                        <ComboBoxItem Content="宮城"/>
                        <ComboBoxItem Content="秋田"/>
                        <ComboBoxItem Content="山形"/>
                        <ComboBoxItem Content="福島"/>
                        <ComboBoxItem Content="茨城"/>
                        <ComboBoxItem Content="栃木"/>
                        <ComboBoxItem Content="群馬"/>
                        <ComboBoxItem Content="埼玉"/>
                        <ComboBoxItem Content="千葉"/>
                        <ComboBoxItem Content="東京" IsSelected="True"/>
                        <ComboBoxItem Content="神奈川"/>
                        <ComboBoxItem Content="新潟"/>
                        <ComboBoxItem Content="富山"/>
                        <ComboBoxItem Content="石川"/>
                        <ComboBoxItem Content="福井"/>
                        <ComboBoxItem Content="山梨"/>
                        <ComboBoxItem Content="長野"/>
                        <ComboBoxItem Content="岐阜"/>
                        <ComboBoxItem Content="静岡"/>
                        <ComboBoxItem Content="愛知"/>
                        <ComboBoxItem Content="三重"/>
                        <ComboBoxItem Content="滋賀"/>
                        <ComboBoxItem Content="京都"/>
                        <ComboBoxItem Content="大阪"/>
                        <ComboBoxItem Content="兵庫"/>
                        <ComboBoxItem Content="奈良"/>
                        <ComboBoxItem Content="和歌山"/>
                        <ComboBoxItem Content="鳥取"/>
                        <ComboBoxItem Content="島根"/>
                        <ComboBoxItem Content="岡山"/>
                        <ComboBoxItem Content="広島"/>
                        <ComboBoxItem Content="山口"/>
                        <ComboBoxItem Content="徳島"/>
                        <ComboBoxItem Content="香川"/>
                        <ComboBoxItem Content="愛媛"/>
                        <ComboBoxItem Content="高知"/>
                        <ComboBoxItem Content="福岡"/>
                        <ComboBoxItem Content="佐賀"/>
                        <ComboBoxItem Content="長崎"/>
                        <ComboBoxItem Content="熊本"/>
                        <ComboBoxItem Content="大分"/>
                        <ComboBoxItem Content="宮崎"/>
                        <ComboBoxItem Content="鹿児島"/>
                        <ComboBoxItem Content="沖縄"/>
                    </ComboBox>

                    <Button Grid.Column="1" 
                          Content="🔍 検索" 
                          Style="{StaticResource ModernButton}"
                          Command="{Binding SearchCommand}"
                          Margin="10,0"/>

                    <Button Grid.Column="2" 
                          Content="🔄 更新" 
                          Style="{StaticResource ModernButton}"
                          Command="{Binding RefreshCommand}"/>
                </Grid>
            </Border>

            <!-- メインコンテンツ -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.5*" MinWidth="280"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="2.5*" MinWidth="400"/>
                </Grid.ColumnDefinitions>

                <!-- 左側: 現在の天気 -->
                <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock Text="{Binding CurrentWeather.Location}" 
                                     FontSize="28" 
                                     FontWeight="Bold" 
                                     Foreground="White"
                                     HorizontalAlignment="Center"
                                     TextWrapping="Wrap"
                                     Margin="0,0,0,15"/>

                            <Viewbox MaxHeight="120" Margin="0,10">
                                <TextBlock Text="{Binding CurrentWeather.WeatherIcon}" 
                                         HorizontalAlignment="Center"/>
                            </Viewbox>

                            <TextBlock HorizontalAlignment="Center" Margin="0,15,0,8">
                                <Run Text="{Binding CurrentWeather.Temperature, StringFormat='{}{0:F1}'}" 
                                     FontSize="64" 
                                     FontWeight="Bold" 
                                     Foreground="White"/>
                                <Run Text="°C" 
                                     FontSize="40" 
                                     Foreground="White"/>
                            </TextBlock>

                            <TextBlock Text="{Binding CurrentWeather.Condition}" 
                                     FontSize="20" 
                                     Foreground="White"
                                     HorizontalAlignment="Center"
                                     Margin="0,0,0,20"/>

                            <Separator Background="#40FFFFFF" Margin="0,15"/>

                            <!-- 詳細情報 -->
                            <Grid Margin="0,15,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="15"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- 湿度 -->
                                <StackPanel Grid.Column="0" Grid.Row="0">
                                    <TextBlock Text="💧 湿度" 
                                             FontSize="12" 
                                             Foreground="#CCFFFFFF"
                                             HorizontalAlignment="Center"/>
                                    <TextBlock HorizontalAlignment="Center" Margin="0,5,0,0">
                                        <Run Text="{Binding CurrentWeather.Humidity}" 
                                             FontSize="20" 
                                             FontWeight="Bold" 
                                             Foreground="White"/>
                                        <Run Text="%" 
                                             FontSize="16" 
                                             Foreground="White"/>
                                    </TextBlock>
                                </StackPanel>

                                <!-- 風速 -->
                                <StackPanel Grid.Column="1" Grid.Row="0">
                                    <TextBlock Text="💨 風速" 
                                             FontSize="12" 
                                             Foreground="#CCFFFFFF"
                                             HorizontalAlignment="Center"/>
                                    <TextBlock HorizontalAlignment="Center" Margin="0,5,0,0">
                                        <Run Text="{Binding CurrentWeather.WindSpeed, StringFormat='{}{0:F1}'}" 
                                             FontSize="20" 
                                             FontWeight="Bold" 
                                             Foreground="White"/>
                                        <Run Text="m/s" 
                                             FontSize="12" 
                                             Foreground="White"/>
                                    </TextBlock>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>
                </Border>

                <!-- 右側: 予報情報 -->
                <ScrollViewer Grid.Column="2" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- 時間別予報 -->
                        <Border Style="{StaticResource CardStyle}" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="📊 時間別予報（24時間）" 
                                         FontSize="18" 
                                         FontWeight="Bold" 
                                         Foreground="White"
                                         Margin="0,0,0,12"/>

                                <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                                            VerticalScrollBarVisibility="Disabled">
                                    <ItemsControl ItemsSource="{Binding HourlyForecasts}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#20FFFFFF" 
                                                      CornerRadius="12" 
                                                      Padding="10"
                                                      Margin="0,0,8,0"
                                                      MinWidth="95"
                                                      MaxWidth="110">
                                                    <StackPanel>
                                                        <!-- 時刻 -->
                                                        <TextBlock Text="{Binding Time}" 
                                                                 FontSize="12" 
                                                                 FontWeight="SemiBold"
                                                                 Foreground="White"
                                                                 HorizontalAlignment="Center"
                                                                 Margin="0,0,0,6"/>

                                                        <!-- 天気アイコン -->
                                                        <Viewbox MaxHeight="32" Margin="0,4">
                                                            <TextBlock Text="{Binding Icon}" 
                                                                     HorizontalAlignment="Center"/>
                                                        </Viewbox>

                                                        <!-- 気温 -->
                                                        <Border Background="#30FFFFFF"
                                                              CornerRadius="6"
                                                              Padding="6,3"
                                                              Margin="0,6,0,0">
                                                            <TextBlock HorizontalAlignment="Center">
                                                                <Run Text="🌡" FontSize="10"/>
                                                                <Run Text=" "/>
                                                                <Run Text="{Binding Temperature, StringFormat='{}{0:F1}'}" 
                                                                     FontSize="14" 
                                                                     FontWeight="Bold" 
                                                                     Foreground="White"/>
                                                                <Run Text="°C" 
                                                                     FontSize="10" 
                                                                     Foreground="White"/>
                                                            </TextBlock>
                                                        </Border>

                                                        <!-- 降水確率 -->
                                                        <Border Background="#30FFFFFF"
                                                              CornerRadius="6"
                                                              Padding="6,3"
                                                              Margin="0,4,0,0">
                                                            <TextBlock HorizontalAlignment="Center">
                                                                <Run Text="💧" FontSize="10"/>
                                                                <Run Text=" "/>
                                                                <Run Text="{Binding RainChance, StringFormat='{}{0}%'}" 
                                                                     FontSize="11" 
                                                                     FontWeight="SemiBold"
                                                                     Foreground="#B0E8FF"/>
                                                            </TextBlock>
                                                        </Border>

                                                        <!-- 湿度 -->
                                                        <Border Background="#30FFFFFF"
                                                              CornerRadius="6"
                                                              Padding="6,3"
                                                              Margin="0,4,0,0">
                                                            <TextBlock HorizontalAlignment="Center">
                                                                <Run Text="💦" FontSize="10"/>
                                                                <Run Text=" "/>
                                                                <Run Text="{Binding Humidity, StringFormat='{}{0}%'}" 
                                                                     FontSize="11" 
                                                                     FontWeight="SemiBold"
                                                                     Foreground="#A0D4FF"/>
                                                            </TextBlock>
                                                        </Border>

                                                        <!-- 風速 -->
                                                        <Border Background="#30FFFFFF"
                                                              CornerRadius="6"
                                                              Padding="6,3"
                                                              Margin="0,4,0,0">
                                                            <TextBlock HorizontalAlignment="Center">
                                                                <Run Text="💨" FontSize="10"/>
                                                                <Run Text=" "/>
                                                                <Run Text="{Binding WindSpeed, StringFormat='{}{0:F1}'}" 
                                                                     FontSize="11" 
                                                                     FontWeight="SemiBold"
                                                                     Foreground="#C0E0FF"/>
                                                                <Run Text="m/s" 
                                                                     FontSize="8" 
                                                                     Foreground="#C0E0FF"/>
                                                            </TextBlock>
                                                        </Border>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </StackPanel>
                        </Border>

                        <!-- 週間予報 -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="📅 週間予報" 
                                         FontSize="18" 
                                         FontWeight="Bold" 
                                         Foreground="White"
                                         Margin="0,0,0,12"/>

                                <ItemsControl ItemsSource="{Binding DailyForecasts}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#20FFFFFF" 
                                                  CornerRadius="10" 
                                                  Padding="12,8"
                                                  Margin="0,0,0,6">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="70"/>
                                                        <ColumnDefinition Width="50"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="90"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Column="0" 
                                                             Text="{Binding Day}" 
                                                             FontSize="13" 
                                                             FontWeight="SemiBold"
                                                             Foreground="White"
                                                             VerticalAlignment="Center"/>

                                                    <Viewbox Grid.Column="1" MaxHeight="24" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding Icon}" 
                                                                 HorizontalAlignment="Center"/>
                                                    </Viewbox>

                                                    <TextBlock Grid.Column="2" 
                                                             Text="{Binding Condition}" 
                                                             FontSize="12" 
                                                             Foreground="#CCFFFFFF"
                                                             VerticalAlignment="Center"
                                                             TextWrapping="Wrap"
                                                             Margin="8,0"/>

                                                    <StackPanel Grid.Column="3" 
                                                              Orientation="Horizontal" 
                                                              HorizontalAlignment="Right"
                                                              VerticalAlignment="Center">
                                                        <TextBlock Foreground="White" FontWeight="Bold" FontSize="13">
                                                            <Run Text="{Binding MaxTemp, StringFormat='{}{0:F0}'}"/>
                                                            <Run Text="°"/>
                                                        </TextBlock>
                                                        <TextBlock Text="/" Foreground="#CCFFFFFF" Margin="4,0"/>
                                                        <TextBlock Foreground="#CCFFFFFF" FontSize="13">
                                                            <Run Text="{Binding MinTemp, StringFormat='{}{0:F0}'}"/>
                                                            <Run Text="°"/>
                                                        </TextBlock>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>

            <!-- ローディングオーバーレイ -->
            <Border Grid.Row="0" Grid.RowSpan="4"
                    Background="#80000000"
                    CornerRadius="20"
                    Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="🔄" FontSize="64" HorizontalAlignment="Center">
                        <TextBlock.RenderTransform>
                            <RotateTransform x:Name="LoadingRotation" CenterX="32" CenterY="32"/>
                        </TextBlock.RenderTransform>
                        <TextBlock.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Angle"
                                                       From="0" To="360" Duration="0:0:2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </TextBlock.Triggers>
                    </TextBlock>
                    <TextBlock Text="読み込み中..." 
                             FontSize="18" 
                             Foreground="White"
                             HorizontalAlignment="Center"
                             Margin="0,20,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>