<Window x:Class="ColorChecker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorChecker"
        mc:Ignorable="d"
        Closing="Window_Closing"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!--1枚目-->
        <Label x:Name="colorArea" Margin="10" Background="Black"/>
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!--２枚目-->
            <TextBlock x:Name="rTextBlock"
                       Grid.Column="0"
                       Grid.Row="0"
                       Text="R"
                       FontSize="30"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            <TextBlock x:Name="gTextBlock"
                       Grid.Column="0"
                       Grid.Row="1"
                       Text="G"
                       FontSize="30"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            <TextBlock x:Name="bTextBlock"
                       Grid.Column="0"
                       Grid.Row="2"
                       Text="B"
                       FontSize="30"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            <ComboBox x:Name="comboBox"
                      Grid.Column="1"
                      Grid.Row="3" Width="150"
                      Height="40"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Top"
                      ItemsSource="{Binding}"
                      SelectedValue="{Binding Color}"
                      SelectionChanged="colorSelectionComboBox_SelectionChanged" RenderTransformOrigin="0.52,-1.069" Margin="0,10,0,0">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <Border Width="80" Height="Auto" Margin="5,0" BorderThickness="1" BorderBrush="Black" >
                            <Border.Background>
                                <SolidColorBrush Color="{Binding Color}"/>
                            </Border.Background>
                            <TextBlock Text="{Binding Name}"></TextBlock>
                        </Border>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Slider x:Name="rSlider"
                    Grid.Column="1"
                    Grid.Row="0"
                    VerticalAlignment="Center"
                    ValueChanged="Slider_ValueChanged"
                    Maximum="255"/>
            <Slider x:Name="gSlider"
                    Grid.Column="1"
                    Grid.Row="1"
                    VerticalAlignment="Center"
                    ValueChanged="Slider_ValueChanged"
                    Maximum="255"/>
            <Slider x:Name="bSlider"
                    Grid.Column="1"
                    Grid.Row="2"
                    VerticalAlignment="Center"
                    ValueChanged="Slider_ValueChanged"
                    Maximum="255"/>
            <TextBox x:Name="rTextBox" 
                     Grid.Column="2"
                     Grid.Row="0"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     FontSize="25"
                     Text="{Binding ElementName=rSlider
                            ,Path=Value,Mode=TwoWay
                            ,UpdateSourceTrigger=PropertyChanged
                            ,StringFormat={}{0:0}}"/>
            <TextBox x:Name="gTextBox"
                     Grid.Column="2"
                     Grid.Row="1"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     FontSize="25"
                     Text="{Binding ElementName=gSlider
                            ,Path=Value,Mode=TwoWay
                            ,UpdateSourceTrigger=PropertyChanged
                            ,StringFormat={}{0:0}}"/>
            <TextBox x:Name="bTextBox"
                     Grid.Column="2"
                     Grid.Row="2"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     FontSize="25"
                     Text="{Binding ElementName=bSlider
                            ,Path=Value,Mode=TwoWay
                            ,UpdateSourceTrigger=PropertyChanged
                            ,StringFormat={}{0:0}}"/>
            <Button x:Name="Delete" Grid.Column="1" Content="Delete" HorizontalAlignment="Center" Margin="0,70,0,0" Grid.Row="3" VerticalAlignment="Top" Width="150" Height="28" Click="Delete_Click"/>
        </Grid>
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="5*"/>
            </Grid.RowDefinitions>
            <!--３枚目-->
            <Button x:Name="Stock" FontSize="25" Content="Stock" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Height="50" Click="Stock_Click"/>
            <ListBox x:Name="Record" Grid.Row="1" d:ItemsSource="{d:SampleData ItemCount=5}" Width="250" Height="350" FontSize="20" SelectionChanged="Record_Selected" />


        </Grid>
    </Grid>
</Window>
