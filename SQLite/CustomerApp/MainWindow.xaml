<Window x:Class="CustomerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomerApp"
        xmlns:conv="clr-namespace:CustomerApp.Converters"
        mc:Ignorable="d"
        Title="顧客管理アプリケーション" Height="800" Width="400">

    <Window.Resources>
        <conv:ByteArrayToImageConverter x:Key="ByteArrayToImageConverter"/>
    </Window.Resources>
    <Grid Margin="10">

        <!-- 行の定義 -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 入力欄 -->
            <RowDefinition Height="Auto"/>
            <!-- ボタン -->
            <RowDefinition Height="Auto"/>
            <!-- 検索ボックス -->
            <RowDefinition Height="*"/>
            <!-- リスト -->
        </Grid.RowDefinitions>

        <!-- 名前・電話番号・住所 入力欄 -->
        <StackPanel Grid.Row="0">
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="名前" Width="70"/>
                <TextBox x:Name="NameTextBox" Width="300"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="電話番号" Width="70"/>
                <TextBox x:Name="PhoneTextBox" Width="300"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="住所" Width="70"/>
                <TextBox x:Name="AddressTextBox" Width="300"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5" HorizontalAlignment="Center">
                <Border BorderBrush="Black" BorderThickness="1" Width="300" Height="100">
                    <Image x:Name="PictureImage" Width="300" Height="100" />
                </Border>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5" HorizontalAlignment="Center">
                <Button x:Name="PictureButton" Content="画像" Width="150" Height="50" />
            </StackPanel>

        </StackPanel>



        <!-- ボタン -->
        <StackPanel Grid.Row="1" Orientation="Horizontal"
                    HorizontalAlignment="Center" Margin="0,10,0,10">
            <Button Content="更新" x:Name="UpdateButton"
                    Width="80" Height="30" Margin="5" Click="UpdateButton_Click"/>
            <Button Content="保存" x:Name="SaveButton"
                    Width="80" Height="30" Margin="5" Click="SaveButton_Click"/>
            <Button Content="削除" x:Name="DeleteButton"
                    Width="80" Height="30" Margin="5" Click="DeleteButton_Click"/>
        </StackPanel>

        <!-- 検索ボックス -->
        <TextBox x:Name="SearchTextBox" Grid.Row="2" Margin="0,5" FontSize="20" 
                 HorizontalAlignment="Stretch" TextChanged="SearchTextBox_TextChanged"/>

        <!-- リストビュー -->
        <ListView x:Name="CustomerListView" Grid.Row="3" Margin="0,5"
          SelectionChanged="CustomerListView_SelectionChanged">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="#CCC" BorderThickness="0,0,0,2" Padding="10" CornerRadius="5" Background="#FAFAFA">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Border Width="60" Height="60" CornerRadius="5" ClipToBounds="True" Margin="0,0,15,0">
                                <Image Source="{Binding Picture, Converter={StaticResource ByteArrayToImageConverter}}" Stretch="UniformToFill" />
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,2">
                                    <TextBlock Text="ID: " FontWeight="Bold" Foreground="#666" Margin="0,0,5,0"/>
                                    <TextBlock Text="{Binding Id}" Foreground="Red" />
                                </StackPanel>
                                <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="18" Foreground="Black" />
                                <TextBlock Text="{Binding Phone}" Foreground="Green" FontSize="14" Margin="0,2,0,0" />
                                <TextBlock Text="{Binding Address}" Foreground="Blue" FontSize="13" Margin="0,2,0,0" TextWrapping="Wrap" Width="250" />
                            </StackPanel>
                        </StackPanel>
                    </Border>

                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
    
